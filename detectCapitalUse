var detectCapitalUse = function(word) {
    if(word.split('').every((letter) => letter === letter.toUpperCase())){
        return true
    }
    if(word[0] === word[0].toUpperCase() && word.split('').splice(1, word.length - 1).every((letter) => letter === letter.toLowerCase())){
        return true
    }
    if(word.split('').every((letter) => letter === letter.toLowerCase())){
        return true
    }
    else {
        return false
    }
};
